/**app.wxss**/
page {
  --primary: #FFB347;
  --primary-dark: #FF6B35;
  --secondary: #4ECDC4;
  --accent: #FFE66D;
  --text: #2C3E50;
  --text-light: #7F8C8D;
  --bg: #FFF9F0;
  --white: #FFFFFF;
  
  background-color: var(--bg);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: var(--text);
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 芒果精灵配色 */
.mango-gradient {
  background: linear-gradient(135deg, #FFB347 0%, #FF6B35 100%);
}

.mango-card {
  background: var(--white);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.1);
  margin-bottom: 20rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FFB347 0%, #FF6B35 100%);
  color: white;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 53, 0.2);
}

.btn-secondary {
  background: white;
  color: #FF6B35;
  border: 2rpx solid #FF6B35;
  border-radius: 50rpx;
  padding: 26rpx 60rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text);
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-light);
  text-align: center;
  margin-bottom: 40rpx;
}

/* 盲盒样式 */
.blindbox-item {
  background: linear-gradient(145deg, #FFB347, #FF6B35);
  border-radius: 30rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 53, 0.2);
  position: relative;
  overflow: hidden;
}

.blindbox-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 40%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 60%
  );
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

/* 价格标签 */
.price-tag {
  background: var(--accent);
  color: var(--primary-dark);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: inline-block;
}

/* 关键词标签 */
.keyword-tag {
  background: rgba(78, 205, 196, 0.2);
  color: var(--secondary);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: inline-block;
  margin: 10rpx;
}

/* 输入框 */
.input-box {
  background: white;
  border: 2rpx solid #E8E8E8;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-box:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 4rpx rgba(255, 179, 71, 0.2);
}

/* 预算选项 */
.budget-option {
  background: white;
  border: 4rpx solid transparent;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.budget-option.active {
  border-color: var(--primary);
  background: linear-gradient(145deg, rgba(255, 179, 71, 0.1), rgba(255, 107, 53, 0.1));
  transform: scale(1.02);
}

/* 动画 */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.float {
  animation: float 3s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-5deg); }
  75% { transform: rotate(5deg); }
}

.shake {
  animation: shake 0.5s ease-in-out;
}

@keyframes pop {
  0% { transform: scale(0); opacity: 0; }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); opacity: 1; }
}

.pop {
  animation: pop 0.5s ease-out;
}
