/**blindbox.wxss**/
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF9F0 0%, #FFE4C4 100%);
}

/* 进度条 */
.progress-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  padding: 0 40rpx;
}

.progress-step {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #E8E8E8;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 24rpx;
}

.progress-step.active {
  background: linear-gradient(135deg, #FFB347, #FF6B35);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.4);
}

.progress-line {
  flex: 1;
  height: 4rpx;
  background: #E8E8E8;
  margin: 0 20rpx;
}

.progress-line.active {
  background: linear-gradient(90deg, #FFB347, #FF6B35);
}

/* 标题 */
.step-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 20rpx;
}

.step-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7F8C8D;
  text-align: center;
  margin-bottom: 50rpx;
}

/* 盲盒容器 */
.blindbox-container {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.blindbox-wrapper {
  flex: 1;
  perspective: 1000rpx;
}

.blindbox-item {
  background: linear-gradient(145deg, #FFB347, #FF6B35);
  border-radius: 30rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 53, 0.2);
  position: relative;
  overflow: hidden;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.blindbox-wrapper.selected .blindbox-item {
  border-color: #FFE66D;
  box-shadow: 0 15rpx 40rpx rgba(255, 107, 53, 0.4);
  transform: translateY(-10rpx);
}

/* 闪光动画 */
.blindbox-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 40%,
    rgba(255, 255, 255, 0.2) 50%,
    transparent 60%
  );
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.question-mark {
  font-size: 80rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  text-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.blindbox-number {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.keyword-hint {
  position: relative;
  z-index: 1;
}

.hint-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 10rpx;
}

.keyword-tag {
  display: inline-block;
  background: rgba(255, 255, 255, 0.25);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

/* 揭晓后的礼物展示 */
.gift-revealed {
  background: white;
  border-radius: 30rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #E8E8E8;
  transition: all 0.5s ease;
  animation: pop 0.5s ease-out;
}

.gift-revealed.is-selected {
  border-color: #FF6B35;
  background: linear-gradient(145deg, #FFF9F0, #FFFFFF);
}

@keyframes pop {
  0% { transform: scale(0.8); opacity: 0; }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); opacity: 1; }
}

.gift-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.gift-name {
  font-size: 26rpx;
  color: #2C3E50;
  font-weight: 600;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.gift-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: 700;
}

.selected-badge {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #FFB347, #FF6B35);
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
}

/* 操作区 */
.action-area {
  text-align: center;
}

.btn-primary.disabled {
  opacity: 0.5;
}

.hint {
  display: block;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.selected-gift-info {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.gift-desc {
  display: block;
  font-size: 30rpx;
  color: #2C3E50;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.platform-tag {
  display: inline-block;
  background: rgba(78, 205, 196, 0.15);
  color: #4ECDC4;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.btn-secondary {
  margin-top: 20rpx;
  background: transparent;
  color: #7F8C8D;
  border: 2rpx solid #DDD;
}
