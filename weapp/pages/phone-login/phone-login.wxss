/**phone-login.wxss**/
.container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF9F0 0%, #FFFFFF 100%);
}

.login-header {
  margin-bottom: 60rpx;
}

.login-header .title {
  font-size: 28px;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 10px;
}

.login-header .subtitle {
  font-size: 14px;
  color: #7F8C8D;
}

.form-section {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 15px;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #E8E8E8;
}

.input-label {
  font-size: 16px;
  font-weight: 600;
  color: #2C3E50;
  margin-right: 15px;
  padding-right: 15px;
  border-right: 1rpx solid #E8E8E8;
}

.phone-input {
  flex: 1;
  font-size: 16px;
  border: none;
  outline: none;
}

.code-input {
  flex: 1;
  font-size: 16px;
  border: none;
  outline: none;
}

.code-btn {
  background: linear-gradient(135deg, #FFB347, #FF6B35);
  color: white;
  border: none;
  border-radius: 10px;
  padding: 10px 15px;
  font-size: 14px;
  min-width: 100px;
}

.code-btn.disabled {
  background: #CCC;
}

.tips {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 60rpx;
  padding: 15px;
  background: rgba(255, 179, 71, 0.1);
  border-radius: 10px;
}

.tips-icon {
  font-size: 16px;
}

.tips-text {
  font-size: 13px;
  color: #FF6B35;
}

.action-area {
  margin-bottom: 30rpx;
}

.btn-primary.disabled {
  opacity: 0.5;
}

.btn-secondary {
  margin-top: 20rpx;
  background: transparent;
  color: #7F8C8D;
  border: 2rpx solid #DDD;
}

.agreement {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 20px;
  font-size: 12px;
  color: #999;
}

.checkbox {
  width: 18px;
  height: 18px;
  border: 2px solid #FFB347;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 12px;
  flex-shrink: 0;
  margin-top: 2px;
}

.checkbox.checked {
  background: #FFB347;
}

.agreement-text .link {
  color: #FF6B35;
}