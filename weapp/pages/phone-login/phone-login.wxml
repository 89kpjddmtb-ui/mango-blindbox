/**phone-login.wxml**/
<view class="container">
  <view class="login-header">
    <view class="title">手机号登录</view>
    <view class="subtitle">请输入手机号获取验证码</view>
  </view>
  
  <view class="form-section">
    <!-- 手机号输入 -->
    <view class="input-group">
      <view class="input-label">+86</view>
      <input 
        class="phone-input"
        type="number"
        maxlength="11"
        placeholder="请输入手机号"
        value="{{phone}}"
        bindinput="onPhoneInput"
      />
    </view>
    
    <!-- 验证码输入 -->
    <view class="input-group">
      <input 
        class="code-input"
        type="number"
        maxlength="6"
        placeholder="请输入验证码"
        value="{{code}}"
        bindinput="onCodeInput"
      />
      <button 
        class="code-btn {{countdown > 0 || !isPhoneValid ? 'disabled' : ''}}"
        bindtap="getCode"
        disabled="{{countdown > 0 || !isPhoneValid}}"
      >
        {{countdown > 0 ? countdown + 's' : '获取验证码'}}
      </button>
    </view>
  </view>
  
  <view class="tips">
    <text class="tips-icon">💡</text>
    <text class="tips-text">未注册手机号验证后将自动创建账号</text>
  </view>
  
  <view class="action-area">
    <button 
      class="btn-primary {{!isPhoneValid || !isCodeValid ? 'disabled' : ''}}"
      bindtap="login"
      disabled="{{!isPhoneValid || !isCodeValid}}"
      loading="{{loading}}"
    >
      {{loading ? '登录中...' : '登录'}}
    </button>
    
    <button class="btn-secondary" bindtap="goBack">
      返回
    </button>
  </view>
  
  <view class="agreement">
    <view class="checkbox {{agreed ? 'checked' : ''}}" bindtap="toggleAgreement"></view>
    <view class="agreement-text">
      登录即代表您同意 <text class="link">《用户协议》</text> 和 <text class="link">《隐私政策》</text>
    </view>
  </view>
</view>