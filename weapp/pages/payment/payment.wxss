/**payment.wxss**/
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF9F0 0%, #FFFFFF 100%);
}

/* 支付成功动画 */
.success-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

.checkmark {
  width: 150rpx;
  height: 150rpx;
  background: linear-gradient(135deg, #52C41A, #389E0D);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: white;
  margin-bottom: 30rpx;
  animation: scaleIn 0.5s ease 0.2s both;
}

@keyframes scaleIn {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

.success-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #52C41A;
}

/* 支付卡片 */
.payment-card {
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.card-header {
  background: linear-gradient(135deg, #FFB347, #FF6B35);
  padding: 30rpx;
  text-align: center;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
}

.gift-summary {
  display: flex;
  padding: 40rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.gift-icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.gift-info {
  flex: 1;
}

.gift-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 10rpx;
}

.gift-desc {
  display: block;
  font-size: 26rpx;
  color: #7F8C8D;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.platform-tag {
  display: inline-block;
  background: rgba(78, 205, 196, 0.15);
  color: #4ECDC4;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 价格明细 */
.price-breakdown {
  padding: 30rpx 40rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}

.price-row:last-child {
  border-bottom: none;
}

.price-row.total {
  padding-top: 30rpx;
  margin-top: 10rpx;
  border-top: 4rpx solid #F0F0F0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}

.price-total {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF6B35;
}

/* 支付方式 */
.payment-methods {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.method-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid transparent;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.method-item.active {
  border-color: #FF6B35;
  background: rgba(255, 107, 53, 0.05);
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.method-icon.wechat {
  background: #07C160;
}

.method-icon.alipay {
  background: #1677FF;
}

.method-info {
  flex: 1;
}

.method-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 6rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.check-icon {
  width: 40rpx;
  height: 40rpx;
  background: #FF6B35;
  border-radius: 50%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 操作区 */
.action-area {
  margin-top: 40rpx;
}

.pay-btn {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

.btn-secondary {
  margin-top: 20rpx;
  background: transparent;
  color: #7F8C8D;
  border: 2rpx solid #DDD;
}

/* 安全提示 */
.security-hint {
  text-align: center;
  margin-top: 40rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
}